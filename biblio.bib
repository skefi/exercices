@article{schneider_spatially_2016,
	title = {Spatially heterogeneous pressure raises risk of catastrophic shifts},
	volume = {9},
	issn = {1874-1738, 1874-1746},
	url = {http://link.springer.com.proxy.library.uu.nl/article/10.1007/s12080-015-0289-1},
