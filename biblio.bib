	urldate = {2015-01-22},
	journal = {Nature},
	author = {Veraart, Annelies J. and Faassen, Elisabeth J. and Dakos, Vasilis and van Nes, Egbert H. and Lürling, Miquel and Scheffer, Marten},
	month = jan,
	year = {2012},
	keywords = {Ecology, Environmental science},
	pages = {357--359},
